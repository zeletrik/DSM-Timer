<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Oled application theme. -->
    <style name="Theme_App_Oled" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/text</item>
        <item name="primaryBackgroundColor">@color/background</item>
        <item name="primaryShadowColor">@color/drawerBlackBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/drawerBlackBackground</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Dark application theme. -->
    <style name="Theme_App_Dark" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/textDark</item>
        <item name="primaryBackgroundColor">@color/backgroundDark</item>
        <item name="primaryShadowColor">@color/drawerDarkBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/drawerDarkBackground</item>
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Light application theme. -->
    <style name="Theme_App_Light" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/textLight</item>
        <item name="primaryBackgroundColor">@color/backgroundLight</item>
        <item name="primaryShadowColor">@color/drawerLightBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/drawerLightBackground</item>
        <item name="android:statusBarColor">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeOverlay_DSMTimer_Dialog" parent="Base.ThemeOverlay.MaterialComponents.MaterialAlertDialog" tools:override="true">
        <item name="materialAlertDialogTitlePanelStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked</item>
        <item name="materialAlertDialogTitleIconStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Dialog.TextStyle</item>
    </style>

    <style name="Dialog.TextStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">?attr/textColor</item>
    </style>

    <style name="BoxStyle">
        <item name="colorAccent">?attr/textColor</item>
        <item name="android:textColorSecondary">?attr/textColor</item>
        <item name="colorControlNormal">?attr/textColor</item>
        <item name="colorControlActivated">?attr/textColor</item>
    </style>

</resources>
